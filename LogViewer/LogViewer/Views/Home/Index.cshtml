@{
    ViewBag.Title = "HomePage";
}

<div class="container">
    <div class="row">
        <div class="jumbotron">
            <div class="row">
                <h1 class="text-center">Log Viewer</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <h3>View logs</h3>
                <div class="panel">
                    Table with logs
                </div>
                <form asp-controller="Logs" asp-action="Index">
                    <button type="submit" class="btn btn-default">Get more</button>
                </form>
            </div>
            <div class="col-md-6">
                <div>
                    <h3>View logs</h3>
                    <div class="panel">
                        Table with top records
                    </div>
                    <form asp-controller="TopRecords" asp-action="Index">
                        <button type="submit" class="btn btn-default">Get more</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
